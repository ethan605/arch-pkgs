pkgname=jless
pkgver=0.7.1
pkgrel=1
pkgdesc="JLess is a command-line JSON viewer designed for reading, exploring, and searching through JSON data"
arch=('any')
url="https://github.com/PaulJuliusMartinez/jless"
license=('MIT')
depends=()
_host="https://github.com/PaulJuliusMartinez/jless/releases/download"
_bin="jless"

source=(
  "${_bin}.zip::${_host}/v${pkgver}/${_bin}-v${pkgver}-x86_64-unknown-linux-gnu.zip"
)

sha512sums=(
  "7d89b911f201603314ce2439505a1b7e3c7dade2581a3d7e56368c9d9d5335561a8ca89262d9ad5fc74c97099fd53ed40de1696e29942b8bc1db50a6fff91dbe"
)

package() {
  install -Dm755 -t "$pkgdir/usr/bin" "${_bin}"
}
