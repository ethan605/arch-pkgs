# Maintainer: Thanh Nguyen <xtnguyen605@gmail.com>
pkgname=elixir-ls-bin
pkgver=0.14.3
pkgrel=1
pkgdesc="Elixir Language Server"
arch=('any')
url="https://github.com/elixir-lsp/elixir-ls"
license=('Apache 2.0')
depends=()
conflicts=(
  'elixir-ls'
  'elixir-ls-git'
)
_host="https://github.com/elixir-lsp/elixir-ls/releases/download"
_bin="elixir-ls"

source=(
  "${_bin}.zip::${_host}/v${pkgver}/${_bin}.zip"
)

sha512sums=(
  "33c9ac4157cade3898d05ab21fff1a80babafce438749b1455f0d056f280d6ef37d065e06321b050f0e562cb41daf71cfa2568a909630c8360325c5df1d4d3a2"
)

package() {
  mkdir -p "$pkgdir/usr/lib/${_bin}"
  cd "$srcdir"
  cp *.ez *.sh "$pkgdir/usr/lib/${_bin}"
}
