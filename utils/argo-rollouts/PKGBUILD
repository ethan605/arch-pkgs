pkgname=argo-rollouts
pkgver=1.3.1
pkgrel=1
pkgdesc="Kubectl Argo Rollouts Plugin"
arch=('any')
url="https://github.com/argoproj/argo-rollouts"
license=('Apache 2.0')
depends=()
_host="https://github.com/argoproj/argo-rollouts/releases/download"
_bin="kubectl-argo-rollouts"

# https://github.com/argoproj/argo-rollouts/releases/download/v1.3.1/kubectl-argo-rollouts-linux-amd64
source=(
  "${_bin}::${_host}/v${pkgver}/${_bin}-linux-amd64"
)

sha512sums=(
  "bfdeb17835293d768343658210c29c6ad12afd63be3e9106bb11eed399fa9b5a624a5cfe54a258dcde838501c9591509a8c33d5ae4950fe7201dbbab15c73551"
)

package() {
  install -Dm755 -t "$pkgdir/usr/bin" "${_bin}"
}
