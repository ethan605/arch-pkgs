_bin="kubectl-argo-rollouts"
_pre_release=""

source=(
  "${_bin}::${_host}/v${pkgver}${_pre_release}/${_bin}-linux-amd64"
)

sha512sums=(
  "73610dd0cfd8c5571c3f10a0bc2e7d09c4f4cec546d35dae34861e05c8d32b7f76795beb45306e20c1da254d00ecd23f277bddacf36c1892c3c1c0d2d0f1801d"
)

package() {
  install -Dm755 -t "$pkgdir/usr/bin" "${_bin}"
}
