pkgname=argo-rollouts
pkgver=1.4.0
pkgrel=1
pkgdesc="Kubectl Argo Rollouts Plugin"
arch=('any')
url="https://github.com/argoproj/argo-rollouts"
license=('Apache 2.0')
depends=()
