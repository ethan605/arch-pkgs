_rc="-rc2"

source=(
  "${_bin}::${_host}/v${pkgver}${_rc}/${_bin}-linux-amd64"
)

sha512sums=(
  "526f543e98d4a3182bfb2f5b886c6ea74ff061abb60ba0458268be1c5a2357391f6870aa2e9e637d8a5c09a57eddfe881b4ff4b648fa358eccbc655f9013fe5a"
)

package() {
  install -Dm755 -t "$pkgdir/usr/bin" "${_bin}"
}
