_bin="kubectl-argo-rollouts"

# https://github.com/argoproj/argo-rollouts/releases/download/v1.3.1/kubectl-argo-rollouts-linux-amd64
source=(
  "${_bin}::${_host}/v${pkgver}/${_bin}-linux-amd64"
)

sha512sums=(
  "3a77f389e0b6c9d3b4f7fdab324574d92f71917f521aadeac301269436018ac9edf9df1adbf5d17c1736294c7e1a861441150962cd07863e210f6ab2f61e446c"
)

package() {
  install -Dm755 -t "$pkgdir/usr/bin" "${_bin}"
}
